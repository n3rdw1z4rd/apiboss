<div class="modal fade" id="edit-account-email-modal" role="dialog" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h3 class="modal-title text-center">Edit Account Email</h3>
			</div>
			<div class="modal-body">
				<form method="post" action="/admin/updateAccountEmail">
					<p><input name="id" type="hidden" value="<%= editAccount.id %>"/></p>
					<p><input class="form-control" name="email" type="email" placeholder="Email" value="<%= editAccount.email %>" required autofocus/></p>
					<p><button class="form-control btn btn-primary" type="submit">Update</button></p>
				</form>
			</div>
			<div class="modal-footer"></div>
		</div>
	</div>
</div>
