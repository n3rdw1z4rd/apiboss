<div class="container">
	<div class="jumbotron">
		<p class="text-center">
			<span style="font-size: larger;">Register</span>
		</p>
		<form id="submitRegistrationForm" method="post" action="/account/register">
			<p><input class="form-control" name="email" type="text" placeholder="Email" required autofocus /></p>
			<p><input class="form-control" name="password" type="password" placeholder="Password" required /></p>
			<p><input class="form-control" name="passwordConfirm" type="password" placeholder="Confirm Password" required /></p>
			<p><div id="registerMessage" class="text-center text-warning"></div></p>
			<p><button class="form-control btn btn-primary" type="submit">Register</button></p>
		</form>
	</div>
</div>
