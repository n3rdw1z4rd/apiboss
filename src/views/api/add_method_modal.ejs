<div class="modal fade" id="add-method-modal" role="dialog" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h3 class="modal-title text-center">New Method Name</h3>
			</div>
			<div class="modal-body">
				<form method="post" action="/api/addMethod">
					<p><input name="id" type="hidden" value="<%= api.id %>"/></p>
					<p><input class="form-control" name="name" type="text" placeholder="Name" required autofocus/></p>
					<p><button class="form-control btn btn-primary" type="submit">Submit</button></p>
				</form>
			</div>
			<div class="modal-footer"></div>
		</div>
	</div>
</div>
